{% for message in app.flashes('mercuryseries_flashy_notification') %}
	<script id="flashy-template" type="text/template">
		<div class="flashy flashy--{{ message.type }}">
			<img class="pe-2" src="{{ asset('icons/') }}{{ message.type }}.svg" width="32" height="32">
			<a class="flashy__body align-middle text-decoration-none" href="#" target="_blank"></a>
		</div>
	</script>

	<script>
		flashy("{{ message.message }}", "{{ message.link }}");
	</script>
{% endfor %}
